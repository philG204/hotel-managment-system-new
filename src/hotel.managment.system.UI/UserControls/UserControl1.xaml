<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:hotel.managment.system.UI.UserControls"
             xmlns:ViewModels="clr-namespace:hotel.managment.system.UI.ViewModels" x:Class="hotel.managment.system.UI.UserControls.UserControl1"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.DataContext>
        <ViewModels:ViewModelSelection/>
    </UserControl.DataContext>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0">
            <Button BorderBrush="Black" Background="#FF3A306B" Foreground="White" FontSize="36" Content="Kasse"/>
        </Grid>
        <Grid Grid.Column="1">
            <Button BorderBrush="Black" Background="#FF251C52" Foreground="White" FontSize="36" Content="Hotelbuchung"/>
        </Grid>
    </Grid>
</UserControl>
